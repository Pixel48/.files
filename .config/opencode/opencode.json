{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "leader": "ctrl+;",
    "app_exit": "ctrl+c,ctrl+d",
    "session_child_cycle": "ctrl+i",
    "session_child_cycle_reverse": "ctrl+o",
    "messages_half_page_up": "ctrl+u,ctrl+k",
    "messages_half_page_down": "ctrl+d,ctrl+j",
    "messages_last": "ctrl+h",
    "input_newline": "shift+enter",
    "thinking_blocks": "<leader>k",
    "app_help": "<leader>;",
    "theme_list": "<leader>h",
    "session_timeline": "ctrl+y",
    "input_clear": "ctrl+c"
  }
}
