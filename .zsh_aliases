alias aliases="${EDITOR} ~/.zsh_aliases"
alias profile="${EDITOR} ~/.profile"

if [ -f ~/.zsh_quotes ]; then
  source ~/.zsh_quotes
fi

__cmd() {
  command -v $1 > /dev/null
}

# Suffix aliases
__cmd $OPEN && alias -s html="noglob $OPEN"
__cmd $OPEN && alias -s mp4="$OPEN"
__cmd $OPEN && alias -s pdf="$OPEN"
__cmd $OPEN && alias -s png="$OPEN"
__cmd dnf && alias -s rpm="dnf in"
__cmd jless && alias -s json="jless"
alias -s asc="gpg --import"
alias -s cc="$EDITOR"
alias -s cc="$EDITOR"
alias -s conf="$EDITOR"
alias -s config="$EDITOR"
alias -s cpp="$EDITOR"
alias -s go="$EDITOR"
alias -s hh="$EDITOR"
alias -s hpp="$EDITOR"
alias -s js="$EDITOR"
alias -s log="$READER"
alias -s lua="$EDITOR"
alias -s md="$READER"
alias -s py="$EDITOR"
alias -s rs="$EDITOR"
alias -s ts="$EDITOR"
alias -s zip="unzip -l"

# Global aliases
__cmd jq && alias -g JQ='| jq'
__cmd pbcopy && alias -g C='| pbcopy'
__cmd wl-copy && alias -g C='| wl-copy'
__cmd xclip && alias -g C='| xclip'
alias -g A='; echo -ne "\a"'
alias -g E='&& exit || echo -ne "\a"'
alias -g ER='| entr -rc'
alias -g FZF='| fzf'
alias -g L='| less'
alias -g LC='| wc -l'
alias -g Q='>/dev/null 2>&1'
alias -g QE='2>/dev/null'
alias -g QR='| qrencode -t ansi256utf8'
alias -g QT='>/dev/null'
alias -g QW='2>&1'
alias -g R='| rg '
alias -g RR='| rg -v'

# Aliases for editing config files
[ -f ~/.${EDITOR}rc ] && alias ${EDITOR}rc="${EDITOR} ~/.${EDITOR}rc"
[ -f ~/.files/config/gh.sh ] && alias ghconfig="${EDITOR} ~/.files/config/gh.sh"
[ -f ~/.files/config/git.sh ] && alias gitconfig="${EDITOR} ~/.files/config/git.sh"
[ -f ~/.files/config/glab.sh ] && alias glabconfig="${EDITOR} ~/.files/config/glab.sh"
[ -f ~/.files/setup/oxidation.sh ] && alias oxiconfig="${EDITOR} ~/.files/setup/oxidation.sh"
[ -f ~/.zshrc ] && alias zshrc="${EDITOR} ~/.zshrc"

# Fundamental aliases
alias reload='exec $(basename $SHELL)'
alias now='date +"%d.%m.%Y %H:%M:%S"'

# fs movement
alias mkdir='mkdir -p'
alias d='dirs -v'
alias dc='dirs -c'
alias .,='popd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'
alias ........='cd ../../../../../../..'
alias 1='cd +1'
alias 2='cd +2'
alias 3='cd +3'
alias 4='cd +4'
alias 5='cd +5'
alias 6='cd +6'
alias 7='cd +7'
alias 8='cd +8'
alias 9='cd +9'

# fs view
alias la='l -A'
alias lla='ll -A'
alias lsa='ls -A'
bindkey -s '^[:' ' ls -lA^J'
bindkey -s '^[K' ' ls -TA^J'
bindkey -s '^[L' ' ls -A^J'
if __cmd eza; then
  alias ls='eza -g'
elif __cmd exa; then
  alias ls='exa'
  alias la='l -a'
  alias lla='ll -a'
  alias lsa='ls -a'
  bindkey -s '^[:' ' ls -lag^J'
  bindkey -s '^[K' ' ls -Ta^J'
  bindkey -s '^[L' ' ls -a^J'
else
  alias ls='ls --color'
fi
alias l='ls -1'
alias ll='ls -lh'
alias llag='lla -g'
alias lld='ll -d'
alias lldg='lld -g'
alias llg='ll -g'
alias lsa='ls -a'
alias lsd='ls -d'
alias lss='ls -sh'

alias cls='clear'
alias dd='dd status=progress'
alias df='df -h'
alias diff='diff --color'
alias dmesg='dmesg -L'
alias du='du -h'
alias free='free -ght'
alias ipe='curl -s ifconfig.me | rev | cut -c 1- | rev'
alias ipt='sudo ptables'
alias j='jobs -l'
alias losetup='sudo losetup'
alias mount='sudo mount'
alias sshc="${EDITOR} ~/.ssh/config"
alias sshk='ssh-keygen'
alias sshr='ssh-keygen -R'
alias sshd='ssh-copy-id'
alias umount='sudo umount'
alias w='w -i'
alias who='who -a'

__cmd arduino-cli && alias ardu='arduino-cli'
__cmd bat && alias cat='bat'
__cmd bat && alias pat='bat -p'
__cmd batgrep && alias rg='batgrep'
__cmd cbonsai && alias cbonsai="cbonsai -c'%,$,#,&,@'"
__cmd g++ && alias cxx=g++
__cmd oh-my-posh && alias omp=oh-my-posh
__cmd terraform && alias tf='terraform'
__cmd wg && alias wgq='wg-quick'
__cmd zmv && alias mmv='noglob zmv -W'

__cmd brctl && alias brctl='sudo brctl'
__cmd cryptsetup && alias cryptsetup="sudo cryptsetup"
__cmd nmcli && alias nmcli='sudo nmcli'
__cmd sysctl && alias sysctl='sudo sysctl'
__cmd tcpdump && alias td="sudo tcpdump"
__cmd wg && alias wg='sudo wg'
