[alias]
	a = add .

	b = branch
	br = branch -a
	bv = b -vv
	bnm = branch --no-merged

	c = commit
	ca = c -a
	# ca = commit --amend
	cam = c -am
	cc = c --amend
	ce = c --allow-empty
	cm = c -m
	co = checkout
	cob = co -b

	d = diff
	dev = co develop
	di = diff --no-index

	f = fetch
	ff = merge --ff-only
	fix = push -f

	i = init

	l = log --oneline
	ll = show -q
	llp = log -1 -p
	lls = log -1 --stat
	lo = log --oneline
	logp = log -p
	logs = log --stat
	lp = log -p
	ls = l --stat

	m = merge
	mas = co master
	mnf = merge --no-ff

	pop = stash pop

	r = remote
	rb = b --remotes
	rv = remote -v

	s = status -s
	sl = shortlog
	st = stash

	t = log --oneline --graph
	tap = ta -p
	tas = ta --stat
	tm = t master
	tmp = tm -p
	tms = tm --stat
	tp = t -p
	tree = log --oneline --graph --all
	ts = t --stat


	;hub= !cmd /c C:\Users\pikse\AppData\Local\GitHubDesktop\GitHubDesktop.exe
	;desktop = hub
