	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
[core]
	editor = nano
	autocrlf = true
	safecrlf = false
[branch]
	autoSetupMerge = simple
[push]
	default = upstream
