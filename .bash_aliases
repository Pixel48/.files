alias aliases='nano ~/.bash_aliases'
alias functions='nano ~/.bash_functions'
alias reload='. ~/.bashrc'
alias bashrc='nano ~/.bashrc'
alias ..='cd ..'
alias .,='cd -'
alias ?='man'
alias ip='ip -c'
alias df='df -h'
alias du='du -h'
alias dd='dd --status=progress'
alias sshc='nano ~/.ssh/config'
alias cat='bat -p'
alias ls='exa'
alias lsd='ls -d'
alias lsa='ls -A'
alias ll='ls -l'
alias l='l -1'
alias lld='ll -d'
alias lla='lsa -l'
